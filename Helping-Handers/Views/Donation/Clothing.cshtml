
@{
    ViewBag.Title = "Clothing";
}

<h2>Clothing Donation Sector</h2>

<form asp-action="SubmitDonation" method="post">
    <div class="form-group">
        <label for="DonorName">[Donors but from a database will be put here]</label>
        <br />
        <h4>DONAR NAME</h4>
    </div>

    <div class="form-group">
        <label for="ClothingType">Clothing Type</label>
        <select class="form-control" id="ClothingType" name="ClothingType" required>
            <option value="Shirt">Shirt</option>
            <option value="Pants">Pants</option>
            <option value="Jacket">Jacket</option>
            <option value="Dress">Dress</option>
            <option value="Shoes">Shoes</option>
            <option value="Mix">Mixed Types</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Size">Size</label>
        <select class="form-control" id="Size" name="Size" required>
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
            <option value="XXL">XXL</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Gender">Gender to Clothe</label>
        <select class="form-control" id="Gender" name="Gender" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Unisex">Unisex</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" min="1" required />
    </div>

    <div class="form-group">
        <label for="Size">Size</label>
        <select class="form-control" id="Size" name="Size" required>
            <option value="Good">Good</option>
            <option value="Preserved">Preserved</option>
            <option value="Worn">Worn</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit Donation</button>
</form>
