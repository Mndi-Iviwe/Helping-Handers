
@{
    ViewBag.Title = "Food";
}

<h2>Food Donation Sector</h2>


<form asp-action="SubmitFoodDonation" method="post">
    <div class="form-group">
        <label for="DonorName">Donor Name</label>
        <h4>Donar Name, IS dontaing today</h4>
    </div>

    <div class="form-group">
        <label for="FoodType">Food Type</label>
        <select class="form-control" id="FoodType" name="FoodType" required>
            <option value="Canned Goods">Canned Goods</option>
            <option value="Dry Goods">Dry Goods (Rice, Pasta, etc.)</option>
            <option value="Fresh Produce">Fresh Produce</option>
            <option value="Frozen Foods">Frozen Foods</option>
            <option value="Beverages">Beverages</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity (in kilograms or liters)</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" min="1" required />
    </div>

    <div class="form-group">
        <label for="ExpirationDate">Expiration Date</label>
        <input type="date" class="form-control" id="ExpirationDate" name="ExpirationDate" required />
    </div>

    <div class="form-group">
        <label for="SpecialHandling">Special Handling Instructions: Please make sure food is packageable and non perishable.
            If possible specify monetary donations that are for food on you contribution.</label>
    </div>

    <button type="submit" class="btn btn-primary">Submit Donation</button>
</form>
<button class="button" onclick="window.location.href='@Url.Action("DonateIndex", "Donation")'">Back</button>