
@{
    ViewBag.Title = "IncidentAssignment";
}

<h2>Incident Assignment Application Form</h2>

<form asp-action="SubmitReport" method="post">
    <div class="form-group">
        <label for="AreaName">Country and Area Name</label>
        <input type="text" class="form-control" id="AreaName" name="AreaName" required />
    </div>

    <div class="form-group">
        <label for="DateOfDisaster">Date of Disaster Registry</label>
        <input type="date" class="form-control" id="DateOfDisaster" name="DateOfDisaster" required />
    </div>

    <div class="form-group">
        <label for="Reason">Reason For Joining (Besides being a hero!!)</label>
        <textarea class="form-control" id="Reason" name="Reason" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Report</button>
</form>