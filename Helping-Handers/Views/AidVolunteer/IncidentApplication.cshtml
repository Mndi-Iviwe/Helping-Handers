@model Helping_Handers.Models.IncidentReport
@{
    ViewBag.Title = "IncidentAssignment";
    Layout = "~/Views/Shared/_VolunteerLayout.cshtml";
}

<h2>Incident Assignment Application Form</h2>

<form asp-action="SubmitReport" method="post">
    <div class="form-group">
        <label for="AreaName">Country and Area Name</label>
        <h4></h4>
    </div>

    <div class="form-group">
        <label for="DateOfDeployment">Date of Relief Aid Deployment</label>
        <h4></h4>
    </div>

    <div class="form-group">
        <label for="Reason">Reason For Joining (Besides being a hero!!)</label>
        <textarea class="form-control" id="Reason" name="Reason" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="CommitDuration">How long can we expect you to commit to helping this project?</label>
        <select class="form-control" id="CommitDuration" name="CommitDuration" required>
            <option value="2">2 month's</option>
            <option value="6">6 month's</option>
            <option value="8">8 month's</option>
            <option value="12">1 year</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Role">What role would you like to serve? (This is just the ideal position you would like to fill) </label>
        <select class="form-control" id="Role" name="Role">
            <option value="Teaching">Teaching</option>
            <option value="Medical Staff">Medical Staff</option>
            <option value="Refugee Support">Refugee Support</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit Application</button>
</form>